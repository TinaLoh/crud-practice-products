<%= form_for @product, :html => {:class =>'form-horizontal'} do |f| %>

<div class ="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class ="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div class ="form-group">
  <%= f.label :price %>
  <%= f.number_field :price %>
</div>

<div class ="form-group">
  <%= f.submit %>
</div>

<% end %>
